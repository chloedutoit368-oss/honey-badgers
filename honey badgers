// Jungle sound toggle
const jungleAudio = document.getElementById('jungle-audio');
const toggleSoundBtn = document.getElementById('toggle-sound');

if (toggleSoundBtn) {
    toggleSoundBtn.addEventListener('click', () => {
        if (jungleAudio.paused) {
            jungleAudio.play();
            toggleSoundBtn.textContent = "Pause Jungle Sound";
        } else {
            jungleAudio.pause();
            toggleSoundBtn.textContent = "Play Jungle Sound";
        }
    });
}

// Simple contact form handler (front-end only)
const contactForm = document.getElementById('contact-form');
const formResponse = document.getElementById('form-response');

if (contactForm) {
    contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        formResponse.textContent = "Thanks! Your message has been sent (simulated).";
        contactForm.reset();
    });
}
